/* pages/index/index.wxss */
.slides {
    height: 310rpx;
}
.slides navigator,
.slides image {
    width: 100%;
    height: 100%;
}
.grids {
    display: flex;
    flex-wrap: wrap;
    background-color: #fff;
    border-left: 1rpx solid #eee;
    border-top: 1rpx solid #eee;
    color: #888;
}
.grids .item{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 33.33333333%;
    height: 255rpx;
    border-right: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    box-sizing: border-box;
}
.grids .item image {
    width: 70rpx;
    height: 70rpx;
}
.grids .item text {
    display: block;
    font-size: 28rpx;
    margin-top: 20rpx;
}
.links {
    display: flex;
    flex-wrap: wrap;
    height: 200rpx;
}
.links view {
    width: 50%;
}
.links view image {
    display: flex;
    width: 80%;
    height: 150rpx;
    margin: 30rpx auto 0;
}
